<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<id>spa</id>
	<name>Single Page Application</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.spa</package>
	<author>OpenMRS Developer</author>
	<description>
		The SPA module for OpenMRS
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/spa/update.rdf</updateURL>
	<require_version>1.10.5</require_version>


	<activator>org.openmrs.module.spa.SpaActivator</activator>

	<globalProperty>
        <property>spa.baseUrl</property>
        <defaultValue>/spa</defaultValue>
        <description>The base URL from where Single Page Applications are served</description>
    </globalProperty>
    
	<servlet>
        <servlet-name>spaServlet</servlet-name>
        <servlet-class>org.openmrs.module.spa.servlet.SpaServlet</servlet-class>
    </servlet>
    
	<filter>
        <filter-name>spaFilter</filter-name>
        <filter-class>org.openmrs.module.spa.filter.SpaFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>spaFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    
</module>